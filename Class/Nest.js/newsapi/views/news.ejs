<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News</title>
    <link rel="stylesheet" href="/css/news.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <center>
        <h1>News Headlines</h1>
        <hr>
    </center>
    <% if (news.length===0) { %>
        <p>No news found.</p>
        <% } else { %>
            <div class="container">
                <div class="row">
                    <% news.forEach(article=> { %>
                        <div class="col-md-4">
                            <div id="card-custom" class="card">
                                <img src="<%= article.urlToImage %>" class="card-img-top" alt="News Image">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= article.title %>
                                    </h5>
                                    <p class="card-text">
                                        <%= article.description %>
                                    </p>
                                    <p class="card-text">
                                        <% if (article.author) { %>
                                            <p><strong>Author: </strong>
                                                <%= article.author %>
                                                    <br>
                                                    <strong>Published At: </strong>
                                                    <%= article.publishedAt %>
                                                        <br>
                                                        <strong>Source: </strong>
                                                        <%= article.source.name %>
                                            </p>
                                            <% } else { %>
                                                <br>
                                                <strong>Published At: </strong>
                                                <%= article.publishedAt %>
                                                    <br>
                                                    strong>Source: </strong>
                                                    <%= article.source.name %>

                                    </p>
                                    <% } %>
                                        <a href="<%= article.url %>" target="_blank" class="btn btn-primary">Read
                                            more</a>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>
            <% } %>

</body>

</html>